extends ../layouts/common.pug

block content
    h3 Login
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action='' method='POST')
        .form-group
            label(for="email") Email
            input#name.form-control(type='email',name='email',value=values? values.email:"")
        .form-group
            label(for="password") Password
            input#phone.form-control(type='password',name='password',value=values? values.password:"")
        button.btn.btn-primary Login